{
  "name": "flexblocks-layout-builder",
  "version": "1.0.0",
  "description": "Custom Gutenberg blocks for advanced layout building.",
  "main": "build/index.js",
  "scripts": {
    "build": "wp-scripts build && npm run copy-json",
    "copy-json": "node -e \"const fs=require('fs');const path=require('path');function copyJsonFiles(src,dest){const items=fs.readdirSync(src,{withFileTypes:true});items.forEach(item=>{const srcPath=path.join(src,item.name);const destPath=path.join(dest,item.name);if(item.isDirectory()){if(!fs.existsSync(destPath))fs.mkdirSync(destPath,{recursive:true});copyJsonFiles(srcPath,destPath);}else if(path.extname(item.name)==='.json'){if(!fs.existsSync(dest))fs.mkdirSync(dest,{recursive:true});fs.copyFileSync(srcPath,destPath);}});}copyJsonFiles('src','build');\"",
    "start": "wp-scripts start",
    "packages-update": "wp-scripts packages-update"
  },
  "dependencies": {
    "@wordpress/block-editor": "^12.0.0",
    "@wordpress/blocks": "^12.0.0",
    "@wordpress/components": "^25.0.0",
    "@wordpress/element": "^5.0.0",
    "@wordpress/i18n": "^4.0.0",
    "@wordpress/primitives": "^3.0.0",
    "classnames": "^2.3.2"
  },
  "devDependencies": {
    "@wordpress/scripts": "^26.0.0"
  }
}
