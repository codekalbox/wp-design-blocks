{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "flexblocks/section",
    "version": "1.0.0",
    "title": "Section Container",
    "category": "wp-design-blocks",
    "icon": "layout",
    "description": "A powerful container block with full flexbox control.",
    "supports": {
        "html": false,
        "anchor": true,
        "align": [
            "full",
            "wide"
        ],
        "spacing": {
            "margin": true,
            "padding": true,
            "blockGap": true
        },
        "color": {
            "background": true,
            "text": true,
            "gradient": true
        },
        "layout": {
            "allowSwitching": false,
            "allowInheriting": false,
            "default": {
                "type": "flex",
                "orientation": "vertical"
            }
        }
    },
    "attributes": {
        "uniqueId": {
            "type": "string"
        },
        "tagName": {
            "type": "string",
            "default": "section"
        },
        "layout": {
            "type": "object",
            "default": {
                "widthType": "boxed",
                "contentWidth": {
                    "value": 1200,
                    "unit": "px"
                },
                "heightType": "auto",
                "minHeight": {
                    "desktop": {
                        "value": 0,
                        "unit": "px"
                    },
                    "tablet": {
                        "value": 0,
                        "unit": "px"
                    },
                    "mobile": {
                        "value": 0,
                        "unit": "px"
                    }
                }
            }
        },
        "flex": {
            "type": "object",
            "default": {
                "desktop": {
                    "direction": "column",
                    "justify": "flex-start",
                    "align": "stretch",
                    "wrap": "nowrap",
                    "gap": 20
                },
                "tablet": {
                    "direction": "column",
                    "justify": "flex-start",
                    "align": "stretch",
                    "wrap": "nowrap",
                    "gap": 20
                },
                "mobile": {
                    "direction": "column",
                    "justify": "flex-start",
                    "align": "stretch",
                    "wrap": "nowrap",
                    "gap": 20
                }
            }
        },
        "visibility": {
            "type": "object",
            "default": {
                "hideDesktop": false,
                "hideTablet": false,
                "hideMobile": false
            }
        },
        "styleBackground": {
            "type": "object",
            "default": {
                "type": "none",
                "color": "",
                "gradient": "",
                "image": {
                    "url": "",
                    "id": 0
                },
                "video": {
                    "url": "",
                    "id": 0
                },
                "position": "center center",
                "size": "cover",
                "repeat": "no-repeat",
                "attachment": "scroll",
                "blendMode": "normal"
            }
        },
        "styleOverlay": {
            "type": "object",
            "default": {
                "enable": false,
                "type": "color",
                "color": "#000000",
                "gradient": "",
                "opacity": 0.5,
                "blendMode": "normal"
            }
        },
        "styleBorder": {
            "type": "object",
            "default": {
                "radius": {
                    "desktop": {
                        "top": 0,
                        "right": 0,
                        "bottom": 0,
                        "left": 0,
                        "unit": "px"
                    },
                    "tablet": {
                        "top": 0,
                        "right": 0,
                        "bottom": 0,
                        "left": 0,
                        "unit": "px"
                    },
                    "mobile": {
                        "top": 0,
                        "right": 0,
                        "bottom": 0,
                        "left": 0,
                        "unit": "px"
                    }
                },
                "width": {
                    "top": 0,
                    "right": 0,
                    "bottom": 0,
                    "left": 0,
                    "unit": "px"
                },
                "style": "solid",
                "color": ""
            }
        },
        "styleShadow": {
            "type": "object",
            "default": {
                "enable": false,
                "hOffset": 0,
                "vOffset": 0,
                "blur": 10,
                "spread": 0,
                "color": "rgba(0,0,0,0.2)",
                "inset": false
            }
        },
        "styleSpacing": {
            "type": "object",
            "default": {
                "padding": {
                    "desktop": {
                        "top": "50",
                        "right": "20",
                        "bottom": "50",
                        "left": "20",
                        "unit": "px"
                    },
                    "tablet": {
                        "top": "40",
                        "right": "15",
                        "bottom": "40",
                        "left": "15",
                        "unit": "px"
                    },
                    "mobile": {
                        "top": "30",
                        "right": "10",
                        "bottom": "30",
                        "left": "10",
                        "unit": "px"
                    }
                },
                "margin": {
                    "desktop": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0",
                        "unit": "px"
                    },
                    "tablet": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0",
                        "unit": "px"
                    },
                    "mobile": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0",
                        "unit": "px"
                    }
                }
            }
        },
        "styleSeparator": {
            "type": "object",
            "default": {
                "top": {
                    "enable": false,
                    "style": "wave",
                    "height": 50,
                    "color": "#ffffff",
                    "flip": false
                },
                "bottom": {
                    "enable": false,
                    "style": "wave",
                    "height": 50,
                    "color": "#ffffff",
                    "flip": false
                }
            }
        },
        "animation": {
            "type": "object",
            "default": {
                "type": "none",
                "direction": "up",
                "duration": 0.8,
                "delay": 0,
                "easing": "ease-out",
                "repeat": "once",
                "triggerOffset": 15,
                "scrollBased": false
            }
        },
        "advanced": {
            "type": "object",
            "default": {
                "zIndex": 1,
                "overflow": "visible",
                "customCss": "",
                "customId": "",
                "customClasses": ""
            }
        }
    },
    "textdomain": "flexblocks",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}